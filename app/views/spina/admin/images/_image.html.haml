.item
  .overlay
    = link_to admin_image_path(image), method: :delete, class: 'icon-only delete-photo-link', data: {confirm: t('spina.images.delete_confirmation')} do
      = t('spina.images.delete')
    %span.photo-name= truncate(image.name, length: 125)
  = radio_button_tag :photo_id, image.id
  = check_box_tag 'photo_ids[]', image.id
  - if image.file.attached?
    - variant = image.file.variant(resize: '300x300')
    = image_tag main_app.rails_blob_variation_path(variant.blob.signed_id, variant.variation.key, variant.blob.filename), id: "photo_#{image.id}"
