%h1= current_page.title

%h5 Line
%p= page_content :line

%h5 Content
!= page_content(:text)

%h5 Photo
%p= image_tag @page.content(:photo).try(:file_url)

%h5 Photo collection

- if page_has_content?(:photo_collection)
  %ul
    - page_content(:photo_collection).images.each do |image|
      %li
        = image_tag image.variant(resize: '100x100')

%h5 Structure

- if page_has_content?(:structure)
  %ul
    - page_content(:structure).structure_items.each do |item|
      %li
        %h6 Title
        %p= item.content(:title)
        %h6 Description
        = item.content(:description).try(:html_safe)
